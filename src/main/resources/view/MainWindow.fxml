<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="420.0"
            styleClass="app-root"
            xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tom.MainWindow">
    <children>
        <ScrollPane fx:id="scrollPane"
                    fitToWidth="true"
                    hbarPolicy="NEVER"
                    hvalue="1.0"
                    vvalue="1.0"
                    AnchorPane.topAnchor="12.0"
                    AnchorPane.leftAnchor="12.0"
                    AnchorPane.rightAnchor="12.0"
                    AnchorPane.bottomAnchor="60.0">
            <content>
                <VBox fx:id="dialogContainer"
                      fillWidth="true"
                      styleClass="dialog-container" />
            </content>
        </ScrollPane>
        <HBox alignment="CENTER_LEFT"
              spacing="8.0"
              styleClass="input-row"
              AnchorPane.leftAnchor="12.0"
              AnchorPane.rightAnchor="12.0"
              AnchorPane.bottomAnchor="12.0">
            <children>
                <TextField fx:id="userInput"
                           onAction="#handleUserInput"
                           promptText="Type a command..."
                           HBox.hgrow="ALWAYS" />
                <Button fx:id="sendButton"
                        mnemonicParsing="false"
                        onAction="#handleUserInput"
                        text="Send" />
            </children>
        </HBox>
    </children>
</AnchorPane>
